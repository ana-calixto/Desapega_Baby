<div class="container">
  <div class="container-form">
    <div class="form-inputs">
      <%= simple_form_for [@product.owner, @review ] do |f| %>
        <h2><%= @product.owner.first_name %> <%= @product.owner.last_name %></h2>
        <%= f.input :content, label: 'Avaliação:' %>
        <%= f.input :raiting, label: 'Nota:' %>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, "Enviar" %>
      <%= link_to 'Lista de produtos', products_path, class: 'btn' %>
    </div>
  <% end %>
  </div>
</div>
<%= render 'shared/footer' %>
