    <input type="text" placeholder="Buscar" type="text" name="query" id="search_query" >
    <button type="submit" name="button"><i class="fa fa-search"></i></button>
  </form>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <% unless current_user %>
        <li class="nav-item">
          <%= link_to "Entrar", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
      <% if current_user %>
        <li class="nav-item">
          <%= link_to "Comprar", products_path, class: "nav-link" %>
        </li>
      <% end %>
      <% if current_user %>
        <li class="nav-item">
          <%= link_to "Vender", new_product_path, class: "nav-link" %>
        </li>
      <% end %>
      <% unless current_user %>
      <li class="nav-item">
        <%= link_to "Cadastre-se", new_user_registration_path, class: "nav-link" %>
      </li>
      <% end %>
      <% if current_user %>
      <li class="nav-item">
          <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "nav-link" %>
      </li>
      <% end %>
      <li class="nav-item dropdown">
          <% if current_user && current_user.photo.attached? %>
            <div>
              <%= image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            </div>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
          </div>
      </li>
    </ul>
  </div>
</div>
